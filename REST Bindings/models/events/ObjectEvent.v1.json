{
  "title": "ObjectEvent",
  "type": "object",
  "description": "Represents an EPCIS Object Event.",
  "properties": {
    "id": {
      "type": "string",
      "description": "The event identifier"
    },
    "isA": {
      "type": "string",
      "default": "ObjectEvent",
      "enum": [
        "ObjectEvent"
      ],
      "description": "The object type"
    },
    "action": {
      "type": "string",
      "enum": [
        "ADD",
        "OBSERVE",
        "DELETE"
      ],
      "description": "The event action"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time",
      "example": "2005-04-03T20:33:31.116000-06:00",
      "description": "The date/time of the event in UTC"
    },
    "eventTimeZoneOffset": {
      "type": "string",
      "description": "The timezone offset of the event"
    },
    "bizStep": {
      "type": "string",
      "pattern": "urn:epcglobal:cbv:bizstep:^[A-Za-z0-9 -_]+",
      "example": "urn:epcglobal:cbv:bizstep:shipping",
      "description": "The EPCIS business step"
    },
    "disposition": {
      "type": "string",
      "example": "urn:epcglobal:cbv:disp:in_transit",
      "pattern": "urn:epcglobal:cbv:disp:^[A-Za-z0-9 -_]+",
      "description": "The EPCIS disposition"
    },
    "readPoint": {
      "$ref": "../ReadPoint.v1.json"
    },
    "bizTransactionList": {
      "type": "array",
      "description": "The EPCIS business transactions for the event",
      "items": {
        "$ref": "../BizTransaction.v1.json"
      }
    },
    "sourceList": {
      "type": "array",
      "description": "The source location(s) for the event",
      "items": {
        "$ref": "../locations/SourceLocation.v1.json"
      }
    },
    "destinationList": {
      "type": "array",
      "description": "The destination location(s) for the event",
      "items": {
        "$ref": "../locations/DestinationLocation.v1.json"
      }
    }
  },
  "required": [
    "id",
    "isA",
    "action",
    "eventTime",
    "eventTimeZoneOffset"
  ]
}