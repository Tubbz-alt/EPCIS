{
  "title": "AggregationEvent",
  "type": "object",
  "description": "Represents and EPCIS aggregation event.",
  "properties": {
    "id": {
      "type": "string",
      "description": "The event identifier"
    },
    "isA": {
      "type": "string",
      "default": "AggregationEvent",
      "description": "The object type",
      "enum": [
        "AggregationEvent"
      ]
    },
    "action": {
      "type": "string",
      "enum": [
        "ADD",
        "OBSERVE",
        "DELETE"
      ],
      "description": "The event action"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time",
      "example": "2005-04-03T20:33:31.116000-06:00",
      "description": "The date/time of the event in UTC"
    },
    "eventTimeZoneOffset": {
      "type": "string",
      "description": "The timezone offset of the event"
    },
    "bizStep": {
      "type": "string",
      "pattern": "urn:epcglobal:cbv:bizstep:^[A-Za-z0-9 -_]+",
      "example": "urn:epcglobal:cbv:bizstep:shipping",
      "description": "The EPCIS business step"
    },
    "disposition": {
      "type": "string",
      "example": "urn:epcglobal:cbv:disp:in_transit",
      "pattern": "urn:epcglobal:cbv:disp:^[A-Za-z0-9 -_]+",
      "description": "The EPCIS disposition"
    },
    "readPoint": {
      "$ref": "../ReadPoint.v1.json"
    },
    "parentID": {
      "type": "string",
      "description": "The parent id for the aggregation",
      "example": "urn:epc:id:sscc:0614141.1234567890"
    },
    "childEPCs": {
      "type": "array",
      "description": "The child IDs (EPCs) for the aggregation",
      "items": {
        "type": "string",
        "example": "[\"urn:epc:id:sgtin:0614141.107346.2017\",\"urn:epc:id:sgtin:0614141.107346.2018\"]"
      }
    },
    "childQuantityList": {
      "type": "array",
      "description": "The child quantities for the aggregation",
      "items": {
        "$ref": "../Quantity.v1.json"
      }
    }
  },
  "required": [
    "id",
    "isA",
    "action",
    "eventTime",
    "eventTimeZoneOffset",
    "parentID",
    "childEPCs",
    "childQuantityList"
  ]
}